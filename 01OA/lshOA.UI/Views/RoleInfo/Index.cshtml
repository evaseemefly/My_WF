    <script type="text/javascript">
        $(function () {
            loadData();
            $("#addDiv").css("display", "none");
            $("#editDiv").css("display", "none");//隐藏修改表单
        });
        function loadData(pars) {
            $("#tt").datagrid({
                url: '/RoleInfo/GetUserInfo',
                title: '角色数据表格',
                width: 700,
                height: 400,
                fitColumns: true, //列自适应
                nowrap: false,
                idField: 'ID',//主键列的列明
                loadMsg: '正在加载用户的信息...',
                pagination: true,//是否有分页
                singleSelect: false,//是否单行选择
                pageSize: 10,//页大小，一页多少条数据
                pageNumber: 1,//当前页，默认的
                pageList: [10, 20, 30],
                queryParams: pars,//往后台传递参数
                columns: [[//c.UserName, c.UserPass, c.Email, c.RegTime
                    { field: 'ck', checkbox: true, align: 'left', width: 50 },
					{ field: 'ID', title: '编号', width: 80 },
					{ field: 'RoleName', title: '角色名称', width: 120 },
                     { field: 'Sort', title: '排序', width: 120 },
                      { field: 'Remark', title: '备注', width: 120 },
					{
					    field: 'SubTime', title: '时间', width: 80, align: 'right',
					    formatter: function (value) {
					        var date = new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10));
					            var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
					            var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
					            return date.getFullYear() + "-" + month + "-" + currentDate;
					    }
					},
                    //{
                    //    field: 'Operator', title: '操作', width: 80, align: 'right',
                    //    formatter: function (value, row, index) {
                    //        var str="<a href="
                    //    }
                    //}
                ]],
                toolbar: [

                    {
                    id: 'btnDelete',
                    text: '删除',
                    iconCls: 'icon-remove',
                    handler: function () {

                        deleteInfo();
                    }
                }, {
                    id: 'btnAdd',
                    text: '添加',
                    iconCls: 'icon-add',
                    handler: function () {

                        addInfo();
                    }
                }, {
                    id: 'btnEdit',
                    text: '编辑',
                    iconCls: 'icon-edit',
                    handler: function () {

                        eidtInfo();
                    }
                },
                //{
                //    id: 'btnAdd',
                //    text: '添加',
                //    iconCls: 'icon-add',
                //    handler: function () {

                //        addInfo();
                //    }
                //}
                ],
            });
        }



        //删除选中的用户数据
        function deleteInfo() {
            var rows = $("#tt").datagrid("getSelections");  //返回所有被选中的行，当没有记录被选中的时候将返回一个空数组。
            //若没有选中
            if (!rows || rows.length == 0) {
                $.messager.alert("提醒", "请选择要删除的记录", "error");
                return;
            }
            else ($.messager.confirm("提醒", "是否要删除选中的记录", function (r) {
                if (r)//若单击了确定
                {
                    //获取要删除的ID
                    //注意：ID可能为多个（数组）
                    var strId = "";
                    for (var i = 0; i < rows.length; i++) {
                        strId = strId + rows[i].ID + ",";
                    }
                    strId = strId.substr(0, strId.length - 1);   //去掉最后的一个“,”
                    $.post("/RoleInfo/DeleteUserInfo",//请求的url
                        {"strId":strId},             //传过去的json格式数据
                        function(data){             //回调函数
                            if (data = "ok") {
                                $("#tt").datagrid('clearChecked');  //清除所有勾选的行
                                //重新加载
                                $("#tt").datagrid('reload');
                            }
                            else
                            {
                                $.messager.alert("注意", "删除记录失败", "error");
                            }

                        });
                }
            }
            ))
        }

