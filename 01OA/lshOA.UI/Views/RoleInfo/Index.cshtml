        }

        //添加人员操作
        function addInfo() {
            //$("#addDiv").panel({
            //    closed: false
            //});

            $("#addDiv").css("display", "block");
            $('#addDiv').dialog({
                title: "添加用户信息",
                width: 350,
                height: 400,
                collapsible: false,//定义是否显示可折叠按钮。
                resizable: true,   //定义是否可以改变对话框窗口大小
                modal: true,
                buttons: [{
                    text: '确定',
                    iconCls: 'icon-ok',
                    handler: function () {
                        $("#addForm").submit();//提交表单
                    }
                }, {
                    text: '取消',
                    iconCls:'icon-cancel',
                    handler: function () {
