@model HM13OA.Model.WorkFlowModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/easyUI/icon.css" rel="stylesheet" />
    <link href="~/Content/easyUI/default/easyui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    
    <script>
        $(function() {
            $('#addDiv').hide();
            $('#editDiv').hide();

            LoadData();
        });

        function LoadData() {
            $("#tt").datagrid({
                url: '@Url.Action("GetPageList","WorkflowModel")',
                title: '工作流模板列表',
                width: 700,
                height: 400,
                fitColumns: true,
                idField: 'ModelId',
                loadMsg: '正在加载模板信息...',
                pagination: true,
                singleSelect: false,
                pageSize: 10,
                pageNumber: 1,
                pageList: [10, 20, 30],
                queryParams: {},
                columns: [[
                    { field: 'ck', checkbox: true, align: 'left', width: 50 },
                    { field: 'ModelId', title: '编号', width: 80 },
                    { field: 'ModelTitle', title: '模板名称', width: 120 },
                    { field: 'ControllerName', title: '控制器名称', width: 120 },
                    { field: 'ActionName', title: '行为名称', width: 120 }
                ]],
                toolbar: [{
                        id: 'toolbarAdd',
                        text: '添加',
                        iconCls: 'icon-add',
                        handler: AddShow
                    }, {
                        id: 'toolbarEdit',
                        text: '修改',
                        iconCls: 'icon-edit',
                        handler:EditShow
                    }, {
                        id: 'toolbarRemove',
                        text: '删除',
                        iconCls: 'icon-remove',
                        handler: RemoveShow
                    }]
            });
        }

        function AddShow() {
            $('#addDiv').show();

            $("#addDiv").dialog({
                title: "添加工作流模板",
                collapsible: true,
                minimizable: true,
                maximizable: true,
                resizable: true,
                modal:true,

                buttons: [{
                        text: "添加",
                        iconCls: "icon-add",
                        handler: function () {
                            $("#addDiv form").submit();
                        }
                    }, {
                        text: "取消",
                        iconCls: "icon-cancel",
                        handler: function () {
                            $("#addDiv").dialog("close");
                        }
                    }]
            });

        }

        function AddAfter(msg) {
            if (msg == "ok") {
                $("#tt").datagrid('load');

                $('#addDiv').dialog('close');
            } else {
                alert("添加失败，请稍候重试");
            }
        }

        function EditShow() {
            //获取表格中选择的项
            var items = $('#tt').datagrid('getSelections');
            if (items.length != 1) {
                $.messager.alert('警告', "请选择一条要修改的记录");
                return;
            }
            var id = items[0]["ModelId"];

            $('#editDiv').show();
            
            //修改src属性，指向修改页面
            $('#editDiv iframe').attr("src", '@Url.Action("Edit","WorkflowModel")?id1=' + id);
            //以窗口的形式来显示修改页面
            $('#editDiv').dialog({
                title: "修改工作流模板",
                collapsible: true,
                minimizable: true,
                maximizable: true,
                resizable: true,
                modal: true,
                height:400,

                buttons: [{
                        text: "修改",
                        iconCls: "icon-edit",
                        handler: function () {
                            //$('#editDiv iframe')[0].contentWindow.form.submit();
                            $('#editDiv iframe')[0].contentWindow.EditSubmit();
                        }
                    }, {
                        text: "取消",
                        iconCls: "icon-cancel",
                        handler: function () {
                            $("#editDiv").dialog("close");
                        }
                    }]
            });
        }

        function EditAfter(msg) {
            if (msg == "ok") {
                $('#editDiv').dialog('close');
                $('#tt').datagrid('reload');
            } else {
                $.messager.alert('提示','修改失败，请稍候重试');
            }
        }

        function RemoveShow() {
            //获取所有选中的项
            var items = $('#tt').datagrid('getSelections');
            if (items.length <= 0) {
                $.messager.alert('警告', '请选择项之后，再进行删除操作');
                return;
            }
            
            //收集所有编号
            var ids = '';
            $.each(items, function(i,item) {
                ids += item['ModelId'] + ',';
            });
            ids = ids.substring(0, ids.length - 1);

            //提示用户确认
            $.messager.confirm('提示', '确定要删除吗？', function(msg) {
                if (msg) {
                    //向服务器发请求
                    $.post('@Url.Action("Remove","WorkflowModel")', {
                            idList: ids
                        }, function(msg) {
                            if (msg == "ok") {
                                $('#tt').datagrid('reload');
                            } else {
                                $.messager.alert('提示', '删除失败，请稍候重试');
                            }
                        });
                }
            });
        }
    </script>

</head>
<body>
        <!--用户列表-->
        <div>
            <table id="tt"></table>
        </div>
    
        <!--工作流模板添加-->
        <div id="addDiv">
            @using (Ajax.BeginForm("Add", "WorkflowModel", new AjaxOptions()
            {
                OnSuccess = "AddAfter"
            }))
            {
                <table border="1">
                    <tr>
                        <td>名称：</td>
                        <td>@Html.TextBoxFor(m=>m.ModelTitle)</td>
                    </tr>
                    <tr>
                        <td>控制器名称：</td>
                        <td>@Html.TextBoxFor(m=>m.ControllerName)</td>
                    </tr>
                    <tr>
                        <td>行为名称：</td>
                        <td>@Html.TextBoxFor(m=>m.ActionName)</td>
                    </tr>
                    <tr>
                        <td>说明：</td>
                        <td>@Html.TextAreaFor(m=>m.Remark)</td>
                    </tr>
                </table>
            }
        </div>
    
        <!--用户修改-->
    <div id="editDiv">
        <iframe src="/Error.html" frameborder="0" width="100%" height="100%"></iframe>
    </div>

</body>
</html>
